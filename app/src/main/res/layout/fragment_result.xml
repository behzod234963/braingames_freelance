<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".fragments.GameFragment"
    android:background="@drawable/root_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="Result"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_cup"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:id="@+id/tvCorrectAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/script"
                android:textColor="@color/white"
                android:text="Правильные ответы: "/>
            <View
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/tvIncorrectAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/script"
                android:textColor="@color/white"
                android:text="Неправильные ответы: "/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_resultfield"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer1_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer2_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer3_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer4_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer5_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer6_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/bg_incorrect"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer7_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer8_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer9_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:background="@drawable/bg_incorrect">
                    <TextView
                        android:id="@+id/tv_answer10_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Level Passed"
                    android:gravity="center"
                    android:fontFamily="@font/script"
                    android:textSize="40sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/b_try_again_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/script"
                android:drawableLeft="@drawable/try_again"
                android:text="Try again"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_try_again_bg"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>